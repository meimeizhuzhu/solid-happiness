.container {
  position: relative;
  height: 100vh;
  overflow: hidden;
}

.twin-image {
  width: 100%;
  height: 100%;
}

/* 左侧加深效果 */
.left-highlight::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 50%;
  height: 100%;
  background: rgba(0,0,0,0.3);
}

/* 右侧加深效果 */
.right-highlight::after {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  width: 50%;
  height: 100%;
  background: rgba(0,0,0,0.3);
}

.birthday-info {
  position: absolute;
  bottom: 60rpx;
  width: 100%;
  text-align: center;
  color: white;
  font-size: 36rpx;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.5);
  z-index: 10;
}